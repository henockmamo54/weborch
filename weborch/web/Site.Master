                        <a class="list-group-item list-group-item-action whitesmokeBG" href="#">Phoniatrics Doctor</a>
                        <a class="list-group-item list-group-item-action whitesmokeBG" href="#">Others</a>
                        <a class="list-group-item list-group-item-action whitesmokeBG" href="#">FAQ</a>
                    </ul>
                </div>
                <div class="col-md-10">
                    <asp:ContentPlaceHolder ID="MainContent" runat="server">
                    </asp:ContentPlaceHolder>
                </div>
            </div>
