                        <a class="list-group-item list-group-item-action" runat="server" id="signoutLink" visible="false" href="" onserverclick="signoutClicked"><%= Resources.HomeView.aspx.SignOut %></a>

                        <%--<a class="list-group-item list-group-item-action active">
